# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page

GET    /                                      controllers.MainController.main(sort="avaleht_uued")
GET    /main/:sort                            controllers.MainController.main(sort: String)
GET    /maineditor/:sort                      controllers.MainController.maineditor(sort: String)

GET    /article/:uudis_id                     controllers.ArticleController.article(uudis_id: String)
GET    /articleeditor/:uudis_id               controllers.ArticleController.articleeditor(uudis_id: String)
GET    /newArticle                            controllers.ArticleController.newArticle()
POST   /saveArticle/:uudis_id                 controllers.ArticleController.saveArticle(uudis_id: String)
GET    /deleteArticle/:uudis_id               controllers.ArticleController.deleteArticle(uudis_id: String)

POST   /saveComment/:uudis_id                 controllers.CommentController.saveComment(uudis_id: String)
GET    /deleteComment/:comment_id             controllers.CommentController.deleteComment(comment_id: String)
GET    /addLike/:comment_id                   controllers.CommentController.addLike(comment_id: String)
GET    /inappropriateComment/:comment_id      controllers.CommentController.inappropriateComment(comment_id: String)

GET    /newsletter                            controllers.NewsletterController.newsletter()
GET    /newslettereditor                      controllers.NewsletterController.newslettereditor()
POST   /addToNewsletter                       controllers.NewsletterController.addToNewsletter()
GET    /removeFromNewsletter/:uudistevoog_id  controllers.NewsletterController.removeFromNewsletter(uudistevoog_id: String)

GET    /login                                 controllers.ApplicationController.login()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                         controllers.Assets.at(path="/public", file)